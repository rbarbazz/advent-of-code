{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "sort-imports": [
      "error",
      { "allowSeparatedGroups": true, "ignoreCase": true }
    ],
    "sort-keys": ["error", "asc", { "caseSensitive": false }]
  }
}
